{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist",
        "target": "es2017",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
}